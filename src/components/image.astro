---
interface Props {
  alt: string;
  publicId: string;
  align: "left" | "right" | "none"
  width: number;
  height: number;
}
const { alt, publicId, align = "none", width, height } = Astro.props;
const alignClassNames = {
  left: "float-left max-w-sm mr-3 clear-left",
  right: "float-right clear-right max-w-sm ml-3",
  none: "max-w-max",
};
---

<figure
  class:list={[
    "m-1 not-prose mx-auto ring-1 dark:ring-zinc-700/50 ring-zinc-400/50",
    alignClassNames[align],
  ]}
>
  <img
    width={width}
    height={height}
    alt={alt}
    src={`https://scp-wiki.wdfiles.com/local--files/${publicId}`}
  />
  <figcaption
    class="font-medium text-center bg-zinc-100/25 dark:bg-zinc-800/25"
  >
    {alt}
  </figcaption>
</figure>
